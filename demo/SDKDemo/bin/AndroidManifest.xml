<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.byr.bbs.sdk.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/android_robot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.byr.bbs.sdk.demo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- main -->
        <activity android:name="cn.byr.bbs.sdk.demo.AuthActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.OpenAPIActivity" />

        <!-- open API -->
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.UserAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.SectionAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.BoardAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.ArticleAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.AttachmentAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.MailAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.FavAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.SearchAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.ReferAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.WidgetAPIActivity" />
        <activity android:name="cn.byr.bbs.sdk.demo.openAPI.VoteAPIActivity" />
    </application>

    <!-- permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>